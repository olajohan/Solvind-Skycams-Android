<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listItemSkycam"
            type="com.solvind.skycams.app.domain.model.Skycam" />
        <variable
            name="skycamLiveData"
            type="androidx.lifecycle.LiveData&lt;com.solvind.skycams.app.domain.model.Skycam>" />
        <variable
            name="alarmLiveData"
            type="androidx.lifecycle.LiveData&lt;com.solvind.skycams.app.domain.model.Alarm>" />
    </data>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:id="@+id/main_content_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/icon_linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icon_imageView"
                            load_main_image_thumb="@{listItemSkycam.mainImage}"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            tools:srcCompat="@drawable/skaidi_main" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/skycam_name_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{listItemSkycam.location.name}"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            tools:text="Skaidi Hotel" />

                        <com.solvind.skycams.app.presentation.home.TimeSinceChronometer
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            reset_chronometer="@{skycamLiveData.mostRecentImage.timestamp}"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            tools:text="16 seconds ago" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Media -->
                <ImageView
                    android:id="@+id/live_view_imageView"
                    load_skycam_image="@{skycamLiveData.mostRecentImage.storageLocation}"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title, secondary and supporting text -->

                    <TextView
                        android:id="@+id/description_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        tools:text="Skaidi Hotel is located in the hills above Skaidi, 300 m from the village centre. It offers a spa, free Wi-Fi and rooms with a balcony and private bathroom with shower. Skaidi Alpine Centre is a 3-minute walk away." />

                </LinearLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/activate_alarm_button"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textOn="Deactivate"
                        android:textOff="Activate"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        set_alarm_button_enabled_state="@{alarmLiveData.alarmAvailableUntilEpochSeconds}"
                        android:checked="@{alarmLiveData.active}" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/watch_ad_button"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Watch Ad" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
</layout>